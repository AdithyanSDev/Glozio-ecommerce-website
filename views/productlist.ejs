    <script>
        
    function applyFilter() {
        // Get the selected price range checkboxes
        const selectedRanges = [];
        const checkboxes = document.querySelectorAll('input[type="checkbox"]');
        checkboxes.forEach(checkbox => {
            if (checkbox.checked && checkbox.id !== 'price-all') {
                const range = checkbox.id.split('-').pop();
                selectedRanges.push(parseInt(range));
            }
        });

        // Filter products based on selected ranges
        const productsContainer = document.querySelector('.row');
        productsContainer.innerHTML = ''; // Clear existing products

        if (selectedRanges.length > 0) {
            products.forEach(product => {
                const price = product.price;
                const isInRange = selectedRanges.some(range => {
                    const min = (range - 1) * 100;
                    const max = range * 100;
                    return price >= min && price <= max;
                });
                if (isInRange) {
                    renderProduct(product);
                }
            });
        } else {
            // If no range selected, display all products
            products.forEach(product => {
                renderProduct(product);
            });
        }
    }

    function renderProduct(product) {
        const productHtml = `
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        ${product.images.length > 0 ? `<img class="img-fluid w-100 product-image" src="${product.images[0]}" alt="${product.name}">` : `<img class="img-fluid w-100 product-image" src="/placeholder.jpg" alt="Placeholder">`}
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-shopping-cart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="/detail/${product._id}">${product.name}</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>$${product.price}</h5>
                            <h6 class="text-muted ml-2"><del>$${product.discount}</del></h6>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small>(99)</small>
                        </div>
                    </div>
                </div>
            </div>
        `;
        const productElement = document.createElement('div');
        productElement.innerHTML = productHtml;
        document.querySelector('.row').appendChild(productElement.firstChild);
    }
</script>

