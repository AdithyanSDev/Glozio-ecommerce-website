    <script>
        $('.cancel-order-btn').click(function () {
            const orderId = $(this).data('order-id');
            console.log('orderId:', orderId); 
            const button = $(this);
        
            // Display confirmation dialog
            const confirmCancel = confirm("Are you sure you want to cancel this order?");
            
            if (confirmCancel) {
                // Check if the order status is already "Cancelled"
                const isCancelled = button.hasClass('cancelled');
        
                if (!isCancelled) {
                    // Send AJAX request to cancel the order
                    $.ajax({
                                url: '/orders/cancel', // Update URL to match the route in your backend
                                method: 'POST',
                                data: { orderId: orderId }, // Send orderId in the request body
                                success: function (response) {
                                    // Update button text and disable it
                                    button.text('Cancelled').addClass('cancelled').prop('disabled', true);
                                },
                                error: function (xhr, status, error) {
                                    console.error(error);
                                    // Handle error response from the server
                                }
                            });

                }
            }
        });
        </script>
       <script>
        function requestReturn(orderId) {
            // Display confirmation dialog
            const confirmReturn = confirm("Are you sure you want to request a return for this order?");
            
            if (confirmReturn) {
                // Send AJAX request to update the order status to "ReturnRequested"
                $.ajax({
                    url: '/orders/return', // Update URL to match the route in your backend
                    method: 'POST',
                    data: { orderId: orderId }, // Send orderId in the request body
                    success: function (response) {
                    // Show a custom alert to indicate that the return request has been sent
                    alert("Return request sent to admin");
                        // Change button text to "Return Requested"
                        $(`button[data-order-id="${orderId}"]`).text('Return Requested').prop('disabled', true);
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        // Handle error response from the server
                    }
                });
            }
        }
    </script>
    
        
     
   
        

