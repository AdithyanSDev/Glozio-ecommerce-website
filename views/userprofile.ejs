<script>
    document.addEventListener('DOMContentLoaded', function () {
    const editButton = document.getElementById('editButton');
    const fullNameInput = document.getElementById('fullNameInput');
    const mobileInputs = document.querySelectorAll('input[id^="mobileInput"]');
    const addressInputs = document.querySelectorAll('input[id^="addressInput"]');

    editButton.addEventListener('click', function () {
        if (editButton.textContent === 'Edit') {
            editButton.textContent = 'Save Changes';
            fullNameInput.disabled = false;
            mobileInputs.forEach(input => input.disabled = false);
            addressInputs.forEach(input => input.disabled = false);
        } else {
            // Save Changes clicked
            // Send updated profile data to server
            const updatedProfile = {
                name: fullNameInput.value,
                addresses: Array.from(addressInputs).map(input => input.value)
            };
            // You can send the updatedProfile object to the server via fetch or XMLHttpRequest
            console.log(updatedProfile); // For demonstration purpose

            // Update UI
            editButton.textContent = 'Edit';
            fullNameInput.disabled = true;
            mobileInputs.forEach(input => input.disabled = true);
            addressInputs.forEach(input => input.disabled = true);
        }
    });
});

</script>


