  <script>
    // Function to update daily sales chart
    function updateDailySalesChart(data) {
        var dailySalesChart = new Chart(document.getElementById('daily-sales-chart'), {
            type: 'bar',
            data: {
                labels: ['S','M', 'T', 'W', 'T', 'F', 'S' ],
                datasets: [{
                    label: 'Sales',
                    data: data,
                    backgroundColor: 'rgba(255, 255, 255, .8)',
                    borderWidth: 0,
                    maxBarThickness: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        suggestedMin: 0,
                        suggestedMax: 15,
                        beginAtZero: true,
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#fff'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#f8f9fa'
                        }
                    }
                }
            }
        });
    }

    // Function to update Monthly  sales chart
    function updateMonthlySalesChart(data) {
    var monthlySalesChart = new Chart(document.getElementById('monthly-sales-chart'), {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
            datasets: [{
              label: 'Sales',
                data: data,
                borderColor: 'rgba(255, 255, 255, .8)',
                borderWidth: 4,
                backgroundColor: 'transparent',
                pointRadius: 5,
                pointBackgroundColor: 'rgba(255, 255, 255, .8)',
                pointBorderColor: 'transparent'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
              y: {
                        suggestedMin: 0,
                        suggestedMax: 50,
                        beginAtZero: true,
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#fff'
                        }
                    },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        color: '#f8f9fa'
                    }
                }
            }
        }
    });
}

function updateYearlySalesChart(data) {
  const currentYear = new Date().getFullYear();
    const lastFiveYears = Array.from({ length: 5 }, (_, index) => currentYear - index);
    
        var yearlySalesChart = new Chart(document.getElementById('yearly-sales-chart'), {
            type: 'line',
            data: {
              labels: lastFiveYears.reverse(),
                datasets: [{
                    label: 'Sales',
                    data: data,
                    borderColor: 'rgba(255, 255, 255, .8)',
                    borderWidth: 4,
                    backgroundColor: 'transparent',
                    pointRadius: 5,
                    pointBackgroundColor: 'rgba(255, 255, 255, .8)',
                    pointBorderColor: 'transparent'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        suggestedMin: 0,
                        suggestedMax: 50,
                        beginAtZero: true,
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#fff'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: '#f8f9fa'
                        }
                    }
                }
            }
        });
    }

   

    // Call your backend API to fetch daily, weekly, and yearly sales data
    // and then pass that data to the respective update functions
    fetch('/admin/sales/daily')
    .then(response => response.json())
    .then(data => {
        // Count the number of orders for each day
        const dailyOrderCounts = new Array(7).fill(0);
        data.forEach(order => {
            const dayOfWeek = new Date(order.orderDate).getDay();
            dailyOrderCounts[dayOfWeek]++;
        });
        // Call the update function with the count data
        updateDailySalesChart(dailyOrderCounts);
    })
    .catch(error => console.error('Error fetching daily sales data:', error));

    fetch('/admin/sales/monthly')
    .then(response => response.json())
    .then(data => {
        // Count the number of orders for each month
        const monthlyOrderCounts = new Array(12).fill(0);
        data.forEach(order => {
            const month = new Date(order.orderDate).getMonth();
            monthlyOrderCounts[month]++;
        });
        // Call the update function with the count data
        updateMonthlySalesChart(monthlyOrderCounts);
    })
    .catch(error => console.error('Error fetching monthly sales data:', error));

     // Call your backend API to fetch yearly sales data
     fetch('/admin/sales/yearly')
    .then(response => response.json())
    .then(data => {
        // Call the update function with the sales data
        updateYearlySalesChart(data);
    })
    .catch(error => console.error('Error fetching yearly sales data:', error));

</script>

