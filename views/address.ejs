                            </div>
                        </div>
                        <!-- Pincode and Locality -->
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="inputPincode">Pincode</label>
                                <input type="text" class="form-control" id="inputPincode" placeholder="Enter pincode" name="pincode" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="inputLocality">Locality</label>
                                <input type="text" class="form-control" id="inputLocality" placeholder="Enter locality" name="locality" required>
                            </div>
                        </div>
                        <!-- Address -->
                        <div class="form-group">
                            <label for="inputAddress">Address</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="Enter address" name="address" required>
                        </div>
                        <!-- City and State -->
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="inputCity">District</label>
                                <select class="form-control" id="inputState" name="city" required>
                                    <option>Select City</option>
                                    <option>Thiruvananthapuram</option>
                                    <option>Ernakulam</option>
                                    <option>Mysore</option>
                                    <option>New Delhi</option>
                                    <option>Mumbai</option>
                                    <option>Bangalore</option>
                                    <option>Chennai</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="inputState">State</label>
                                <select class="form-control" id="inputState" name="state" required>
                                    <option>Select state</option>
                                    <option>Kerala</option>
                                    <option>Karnataka</option>
                                    <option>Tamil Nadu</option>
                                    <option>Delhi</option>
                                    <option>Maharashtra</option>
                                </select>
                            </div>
                        </div>
                        <!-- Address Type -->
                        <div class="form-group">
                            <fieldset>
                                <small>Address Type</small>
                                <div class="row">
                                <div class="form-check ml-3 mt-2">
                                    <input class="form-check-input" type="radio" name="addressType" id="home" value="Home" required>
                                    <label class="form-check-label " for="home">Home</label>
                                </div>
                                <div class="form-check ml-3 mt-2" >
                                    <input class="form-check-input" type="radio" name="addressType" id="work" value="Work" required>
                                    <label class="form-check-label " for="work">Work</label>
                                </div>
                            </div>
                            </fieldset>
                        </div>
                        <!-- Submit Button -->
                        <div class="container justify-content-center align-items-center">
                        <button type="submit" class="btn btn-primary">Add</button><a class="btn btn-primary ml-3  pl-3" href="/api/user/profile">Cancel</a>
                    </div>
                    </form>
                    <!-- Existing Addresses -->
                    <div class="container mt-3">
                        <strong class="">Existing address</strong>
                        <% if (user.addresses.length > 0) { %>
                            <% user.addresses.forEach((address) => { %>
                                <div class="address-container mb-3 border rounded p-3 mt-3 position-relative">
