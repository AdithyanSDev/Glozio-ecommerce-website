                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton-<%= address._id %>">
                                            <a class="dropdown-item" href="/api//addresses/<%= address._id %>">Edit</a>

                                            <a class="dropdown-item delete"  data-id="<%= address._id %>">Delete</a>


                                        </div>
                                    </div>
                                    <div class="address-type">
                                        <span class="address-type-badge bg-secondary text-dark px-2 py-1 rounded"><%= address.addressType %></span>
                                    </div>
                                    <div class="address-details">
                                        <div class=" row name-phone mt-2">
                                            <strong class="ml-3"> <%= address.name %></strong>
                                            <strong class="ml-3"> <%= address.mobileNumber %></strong>
                                        </div>
                                        <div class="full-address">
                                            <%= address.address %>, <%= address.locality %>, <%= address.city %>, <%= address.state %>, <%= address.pincode %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="alert alert-info" role="alert">
                                No addresses found.
                            </div>
                        <% } %>
                    </div>
                    
                    
