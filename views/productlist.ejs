        const isAllPriceChecked = allPriceCheckbox.checked;

       

        // If "All Price" is checked, render all products
        if (isAllPriceChecked) {
            filteredProducts = products;
        } else {
            // Get the selected price ranges
            const selectedRanges = Array.from(checkedCheckboxes).map(checkbox => {
                const rangeValues = checkbox.id.split('-').slice(1); // Extract min and max values from checkbox id

                // Ensure rangeValues has exactly two elements
                if (rangeValues.length !== 2) {
                    console.error('Invalid rangeValues:', rangeValues);
                    return null; // Return null for invalid rangeValues
                }

                // Parse min and max values
                const min = parseInt(rangeValues[0]);
                const max = parseInt(rangeValues[1]);

                // Check if min and max are valid numbers
                if (isNaN(min) || isNaN(max)) {
                    console.error('Invalid min or max:', min, max);
                    return null; // Return null for invalid min or max values
                }

                return { min, max };
            }).filter(range => range !== null); // Filter out null values

            // Filter products based on selected price ranges
            filteredProducts = selectedRanges.reduce((result, range) => {
                return result.concat(products.filter(product => product.sellingPrice >= range.min && product.sellingPrice <= range.max));
            }, []);
        }

        console.log('Filtered products:', filteredProducts);

        // Render filtered products
        renderFilteredProducts(filteredProducts);
    } catch (error) {
        console.error('Error applying filter:', error);
    }
}

