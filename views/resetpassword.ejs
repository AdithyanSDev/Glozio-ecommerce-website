/* New CSS for password toggle */

.password-container {
    position: relative;
}

.toggle-password {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 10px;
    cursor: pointer;
}

.toggle-password i {
    cursor: pointer;
